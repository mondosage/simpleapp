{
    "kind":"ReplicationController",
    "apiVersion":"v1",
    "metadata":{
       "name":"simpleapp",
       "labels":{
          "app":"simpleapp"
       }
    },
    "spec":{
       "replicas":3,
       "selector":{
          "app":"simpleapp"
       },
       "template":{
          "metadata":{
             "labels":{
                "app":"simpleapp"
             }
          },
          "spec":{
             "containers":[
                {
                   "name":"simpleapp",
                   "image":"mondosage/simpleapp:latest",
                   "ports":[
                      {
                         "name":"http-server",
                         "containerPort":3000
                      }
                   ]
                }
             ]
          }
       }
    }
 }